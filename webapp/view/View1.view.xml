<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
controllerName="simple-app.controller.View1" displayBlock="true"
height="100%" width="100%">
	<App>
		<pages>
			<Page title="{i18n>title}" height="100%" width="100%" enableScrolling="true">
				<content>
                    <VBox>
				        <Text text="Simple app" id="__text4"/>
                        <Label text="test: {modjson>/soap:Envelope/soap:Body/XacuteResponse/Rowset/Row/O_XML_DOCUMENT/OT_ORDENES_MEZCLA/item/0/ORDENCARGA/#text}"/>
                        <Button text="SOAP" press="onRetrieveListaOrdenMezcla"/>
                        <Button text="Debug" press="onDebugButton"/>
                    </VBox>
                    <ScrollContainer id="cajaScroll" height="20em" width="100%" horizontal="true" vertical="true" focusable="true">
                        <Table id="generalTable" items="{ path: 'modjson>/soap:Envelope/soap:Body/XacuteResponse/Rowset/Row/O_XML_DOCUMENT/OT_ORDENES_MEZCLA/item/' }">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="Ordenes Mezcla" level="H2"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="Ord. Mezcla"/>
                                </Column>
                                <Column hAlign="Right">
                                    <Text text="Peso ideal"/>
                                </Column>
                                <Column hAlign="Right">
                                    <Text text="Peso cargado"/>
                                </Column>
                                <Column>
                                    <Text text="UM"/>
                                </Column>
                                <Column>
                                    <Text text="Fecha"/>
                                </Column>
                                <Column>
                                    <Text text="Activo"/>
                                </Column>
                                <Column>
                                    <Text text="Recurso"/>
                                </Column>
                                <Column>
                                    <Text text="Silo"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" press="onListItemPress">
                                    <cells>
                                        <Text
                                            text="{
                                            path: 'modjson>ORDENCARGA/#text',
                                            formatter: '.formatter.noLeadingZeroes'
                                            }"/>
                                        <Text
                                            text="{ path: 'modjson>PESO_IDEAL/#text',
                                            formatter: '.formatter.noDecimals'
                                            }" />
                                        <Text
                                            text="{ path: 'modjson>PESO_CARGADO/#text',
                                            formatter: '.formatter.noDecimals'
                                            }" />
                                        <Text 
                                            text="{modjson>UNIDAD/#text}" />
                                        <Text
                                            text="{path: 'modjson>FECHA/#text',
                                            formatter: '.formatter.global2SpainDate'}"/>
                                        <Text
                                            text="{modjson>ACTIVA/#text}"/>
                                        <Text
                                            text="{modjson>ZRECURSO/#text}"/>
                                        <Text
                                            text="{modjson>SILO/#text}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </ScrollContainer>
                    <VBox id="details">
                        <Table items="{path: 'modmateriales>/item/' }">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Materiales" level="H2"/>
                                    <ToolbarSpacer/>
                                    <Button text="Close" press="onDetailListClose"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="Material"/>
                            </Column>
                            <Column>
                                <Text text="DescripciÃ³n"/>
                            </Column>
                            <Column>
                                <Text text="Lote"/>
                            </Column>
                            <Column>
                                <Text text="Activo"/>
                            </Column>
                            <Column hAlign="Right">
                                <Text text="Peso Ideal"/>
                            </Column>
                            <Column hAlign="Right">
                                <Text text="Peso Cargado"/>
                            </Column>
                            <Column>
                                <Text text="UM"/>
                            </Column>
                            <Column>
                                <Text text="% ideal"/>
                            </Column>
                            <Column>
                                <Text text="% cargado"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text
                                        text="{
                                        path: 'modmateriales>MATERIAL/#text',
                                        formatter: '.formatter.noLeadingZeroes'
                                        }"/>
                                    <Text
                                        text="{modmateriales>DESC_MATERIAL/#text}" />
                                    <Text
                                        text="{modmateriales>LOTE/#text}" />
                                    <Text 
                                        text="{modmateriales>ACTIVA/#text}" />
                                    <Text
                                        text="{ path: 'modmateriales>PESO_IDEAL/#text',
                                        formatter: '.formatter.noDecimals'}"/>
                                    <Text
                                        text="{path: 'modmateriales>PESO_CARGADO/#text',
                                        formatter: '.formatter.noDecimals'}"/>
                                    <Text
                                        text="{modmateriales>UNIDAD/#text}"/>
                                    <Text
                                        text="{modmateriales>PORCENTAJE_IDEAL/#text}"/>
                                    <Text
                                        text="{modmateriales>PORCENTAJE/#text}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                        </Table>
                    </VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>