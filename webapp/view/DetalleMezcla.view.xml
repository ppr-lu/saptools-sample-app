<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:core="sap.ui.core"
xmlns="sap.m" 
controllerName="simple-app.controller.DetalleMezcla" displayBlock="true"
height="100%" width="100%">
	<App>
		<pages>
			<Page title="{i18n>title}" enableScrolling="true" 
            showNavButton="true"
		    navButtonPress="onNavBack">
				<content>
                    <VBox>
				        <Text text="Detail" id="__text4"/>
                    </VBox>
                    <HBox>
                        <ScrollContainer id="mixDetailContainerLeft"
                           height="100%" width="100%" horizontal="true" focusable="true">
                            <Table 
                                id="mixDetailLeft" 
                                items="{path: 'moddetailjson>/soap:Envelope/soap:Body/XacuteResponse/Rowset/Row/O_XML_DOCUMENT/O_DETALLE_ORDEN_MEZCLA/MATERIALES_ORDEN/item/' }"
                                fixedLayout="false"
                                >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="Material" level="H2"/>
                                            <ToolbarSpacer/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column width="100px">
                                        <Text text="Material"/>
                                    </Column>
                                    <Column width="100px">
                                        <Text text="Desc. Material"/>
                                    </Column>
                                    <Column width="100px">
                                        <Text text="Lote"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text
                                                text="{
                                                path: 'moddetailjson>MATERIAL/#text',
                                                formatter: '.formatter.noLeadingZeroes'
                                                }"/>
                                            <Text
                                                text="{moddetailjson>DESC_MATERIAL/#text}" />
                                            <Text
                                                text="{moddetailjson>LOTE/#text}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                        <ScrollContainer id="mixDetailContainerRight"
                            horizontal="true">
                            <Table 
                                id="mixDetailRight" 
                                items="{path: 'moddetailjson>/soap:Envelope/soap:Body/XacuteResponse/Rowset/Row/O_XML_DOCUMENT_2/OT_DETALLE_COMPOSICION/item/' }"
                                fixedLayout="false">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="Composición" level="H2"/>
                                            <ToolbarSpacer/>
                                            <!--<Button text="Close" press="onDetailListClose"/>-->
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="Orden Proceso"/>
                                    </Column>
                                    <Column>
                                        <Text text="Material"/>
                                    </Column>
                                    <Column>
                                        <Text text="Descripción"/>
                                    </Column>
                                    <Column hAlign="Right">
                                        <Text text="Cantidad"/>
                                    </Column>
                                    <Column>
                                        <Text text="UM"/>
                                    </Column>
                                    <Column>
                                        <Text text="Estado"/>
                                    </Column>
                                    <Column>
                                        <Text text="Prioridad"/>
                                    </Column>
                                    <Column>
                                        <Text text="Fecha inicio plan"/>
                                    </Column>
                                    <Column>
                                        <Text text="Fecha fin plan"/>
                                    </Column>
                                    <Column>
                                        <Text text="Fecha inicio real"/>
                                    </Column>
                                    <Column>
                                        <Text text="Fecha fin real"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text
                                                text="{
                                                path: 'modordenesproceso>NUM_ORDEN_PROCESO/#text',
                                                formatter: '.formatter.noLeadingZeroes'
                                                }"/>
                                            <Text
                                                text="{ path: 'modordenesproceso>MATERIAL/#text',
                                                formatter: '.formatter.noLeadingZeroes'}" />
                                            <Text
                                                text="{modordenesproceso>DESC_MATERIAL/#text}" />
                                            <Text
                                                text="{ path: 'modordenesproceso>CANTIDAD/#text',
                                                formatter: '.formatter.noDecimals' }"/>
                                            <Text
                                                text="{ path: 'modordenesproceso>UNIDAD/#text' }"/>
                                            <Text
                                                text="{ path: 'modordenesproceso>ESTADO/#text' }"/>
                                            <Text
                                                text="{ path: 'modordenesproceso>PRIORIDAD/#text' }"/>
                                            <Text
                                                text="{path: 'modordenesproceso>FECHA_PROG_INI/#text',
                                                formatter: '.formatter.global2SpainDate'}"/>
                                            <Text
                                                text="{path: 'modordenesproceso>FECHA_PROG_FIN/#text',
                                                formatter: '.formatter.global2SpainDate'}"/>
                                            <Text
                                                text="{path: 'modordenesproceso>FECHA_REAL_INI/#text',
                                                formatter: '.formatter.global2SpainDate'}"/>
                                            <Text
                                                text="{path: 'modordenesproceso>FECHA_REAL_FIN/#text',
                                                formatter: '.formatter.global2SpainDate'}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </ScrollContainer>
                    </HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>